@model Suleyman.WebUI.Models.ProductListViewModel


@{
    Layout = "~/Views/_Layout.cshtml";
}
<div>
    <div class="table table-responsive">
        <table class="table">
            <tr>
                <td>Product Name</td>
                <td>Unit Price</td>
                <td>Unit İn Stock</td>
                <td></td>
            </tr>

            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.UnitsInStock</td>
                    <td><a class="btn btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@item.ProductId"> Add To Cart</a></td>
                </tr>
            }


        </table>
    </div>
</div>
<product-list-pager current-category="@Model.CurrentCategory"
                    current-page="@Model.CurrentPage"
                    page-count="@Model.PageCount"
                    page-size="@Model.PageSize">

</product-list-pager>

